
@page "/signup"
@using MyShop_Site.Models
@inject NavigationManager Navigation

<PageTitle>Sign Up - MyShop</PageTitle>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="signup-form">
                <div class="text-center mb-4">
                    <h2>Create Your Account</h2>
                    <p class="text-muted">Join MyShop and start your shopping journey</p>
                </div>

                <EditForm Model="user" OnValidSubmit="HandleValidSubmit">
                    <DataAnnotationsValidator />
                    <ValidationSummary class="text-danger" />

                    <div class="form-group mb-3">
                        <label for="fullName" class="form-label">Full Name</label>
                        <InputText id="fullName" class="form-control" @bind-Value="user.FullName" placeholder="Enter your full name" />
                        <ValidationMessage For="@(() => user.FullName)" />
                    </div>

                    <div class="form-group mb-3">
                        <label for="email" class="form-label">Email Address</label>
                        <InputText id="email" class="form-control" @bind-Value="user.Email" placeholder="Enter your email" />
                        <ValidationMessage For="@(() => user.Email)" />
                    </div>

                    <div class="form-group mb-3">
                        <label for="phone" class="form-label">Phone Number</label>
                        <InputText id="phone" class="form-control" @bind-Value="user.PhoneNumber" placeholder="Enter your phone number" />
                        <ValidationMessage For="@(() => user.PhoneNumber)" />
                    </div>

                    <div class="form-group mb-4">
                        <label for="password" class="form-label">Password</label>
                        <InputText id="password" type="password" class="form-control" @bind-Value="user.Password" placeholder="Create a password" />
                        <ValidationMessage For="@(() => user.Password)" />
                    </div>

                    <div class="form-check mb-4">
                        <InputCheckbox id="acceptTerms" class="form-check-input" @bind-Value="acceptTerms" />
                        <label class="form-check-label" for="acceptTerms">
                            I agree to the <a href="#" class="text-primary">Terms of Service</a> and <a href="#" class="text-primary">Privacy Policy</a>
                        </label>
                    </div>

                    <button type="submit" class="btn btn-primary btn-lg w-100" disabled="@(!acceptTerms)">
                        <i class="oi oi-person"></i> Create Account
                    </button>
                </EditForm>

                <div class="text-center mt-4">
                    <p>Already have an account? <a href="/login" class="text-primary">Sign in here</a></p>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private User user = new User();
    private bool acceptTerms = false;

    private void HandleValidSubmit()
    {
        // Here you would typically save the user to a database
        // For now, we'll just redirect to a success page
        Navigation.NavigateTo("/");
    }
}
