
@page "/plans"
@using MyShop_Site.Models
@using MyShop_Site.Services
@inject PlanService PlanService
@inject NavigationManager Navigation

<PageTitle>Choose Your Plan - MyShop</PageTitle>

<div class="container mt-4">
    <div class="text-center mb-5">
        <h1>Choose Your Plan</h1>
        <p class="lead">Select the perfect plan for your business needs</p>
        
        <div class="d-flex justify-content-center align-items-center mb-4">
            <span class="me-3">Monthly</span>
            <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" @bind="isYearly" @bind:event="onchange" id="billingToggle">
                <label class="form-check-label" for="billingToggle"></label>
            </div>
            <span class="ms-3">Yearly <span class="badge bg-success">Save 17%</span></span>
        </div>
    </div>

    <div class="row">
        @foreach (var plan in plans)
        {
            var price = isYearly ? plan.YearlyPrice : plan.MonthlyPrice;
            var period = isYearly ? "year" : "month";
            var originalYearlyPrice = plan.MonthlyPrice * 12;
            
            <div class="col-md-4 mb-4">
                <div class="card h-100 @(plan.Name == "Standard" ? "border-primary" : "")">
                    @if (plan.Name == "Standard")
                    {
                        <div class="card-header bg-primary text-white text-center">
                            <small>Most Popular</small>
                        </div>
                    }
                    <div class="card-body text-center d-flex flex-column">
                        <h3>@plan.Name</h3>
                        <p class="text-muted">@plan.Description</p>
                        
                        <div class="mb-3">
                            <span class="h2">$@price.ToString("F2")</span>
                            <span class="text-muted">/ @period</span>
                            @if (isYearly && plan.YearlyDiscount > 0)
                            {
                                <div class="small text-success">
                                    Save $@((originalYearlyPrice - plan.YearlyPrice).ToString("F2")) per year
                                </div>
                            }
                        </div>

                        <ul class="list-unstyled mb-4">
                            @foreach (var feature in plan.Features)
                            {
                                <li class="mb-2">
                                    <i class="oi oi-check text-success"></i> @feature
                                </li>
                            }
                        </ul>

                        <div class="mt-auto">
                            <button class="btn @(plan.Name == "Standard" ? "btn-primary" : "btn-outline-primary") btn-lg w-100" 
                                    @onclick="() => SelectPlan(plan.Id)">
                                Get Started
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="text-center mt-4">
        <a href="/plans/compare" class="btn btn-outline-secondary">
            <i class="oi oi-spreadsheet"></i> Compare Plans
        </a>
    </div>
</div>

@code {
    private List<Plan> plans = new List<Plan>();
    private bool isYearly = false;

    protected override void OnInitialized()
    {
        plans = PlanService.GetAllPlans();
    }

    private void SelectPlan(int planId)
    {
        Navigation.NavigateTo($"/addons?planId={planId}&yearly={isYearly}");
    }
}
