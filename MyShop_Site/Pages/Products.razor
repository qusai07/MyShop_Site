
@page "/products"
@using MyShop_Site.Models
@using MyShop_Site.Services
@inject ProductService ProductService
@inject NavigationManager Navigation

<PageTitle>Products - MyShop</PageTitle>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="page-title">Our Products</h1>
            </div>
            
            <div class="row">
                @if (products != null && products.Any())
                {
                    @foreach (var product in products)
                    {
                        <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                            <div class="product-card">
                                <div class="product-image">
                                    <img src="@product.ImageUrl" alt="@product.Name" />
                                </div>
                                <div class="product-info">
                                    <h5 class="product-title">@product.Name</h5>
                                    <p class="product-description">@product.Description</p>
                                    <div class="product-price">$@product.Price.ToString("F2")</div>
                                    <button class="btn btn-primary w-100" @onclick="() => ViewProduct(product.Id)">
                                        View Details
                                    </button>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="col-12">
                        <div class="text-center py-5">
                            <h3>No products available</h3>
                            <p class="text-muted">Check back later for new products!</p>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@code {
    private List<Product>? products;

    protected override void OnInitialized()
    {
        products = ProductService.GetAllProducts();
    }

    private void ViewProduct(int productId)
    {
        Navigation.NavigateTo($"/product/{productId}");
    }
}
