
@page "/"
@using MyShop_Site.Components.Navigation

<PageTitle>MyShop - Online Store</PageTitle>

<MainNavigation />

<div class="hero-section bg-gradient text-white py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold mb-4">Welcome to MyShop</h1>
                <p class="lead mb-4">
                    Discover our comprehensive range of hardware, products, and applications 
                    designed to power your business growth.
                </p>
                <div class="d-flex gap-3">
                    <a href="/products" class="btn btn-light btn-lg">
                        Explore Products
                    </a>
                    <a href="/pricing" class="btn btn-outline-light btn-lg">
                        View Pricing
                    </a>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="text-center">
                    <i class="fas fa-store fa-10x opacity-75"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container py-5">
    <div class="row text-center mb-5">
        <div class="col-12">
            <h2 class="display-5 fw-bold mb-3">Our Product Categories</h2>
            <p class="lead text-muted">Choose from our three main categories of products</p>
        </div>
    </div>
    
    <div class="row g-4">
        <div class="col-md-4">
            <div class="card h-100 shadow-soft border-0">
                <div class="card-body text-center p-4">
                    <i class="fas fa-server fa-3x text-primary mb-3"></i>
                    <h5 class="card-title fw-bold">Hardware</h5>
                    <p class="card-text text-muted">
                        Professional-grade servers, networking equipment, and infrastructure solutions.
                    </p>
                    <a href="/products/hardware" class="btn btn-outline-primary">
                        Browse Hardware
                    </a>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card h-100 shadow-soft border-0">
                <div class="card-body text-center p-4">
                    <i class="fas fa-box fa-3x text-secondary mb-3"></i>
                    <h5 class="card-title fw-bold">Products</h5>
                    <p class="card-text text-muted">
                        Business management tools, software solutions, and productivity suites.
                    </p>
                    <a href="/products/products" class="btn btn-outline-primary">
                        Browse Products
                    </a>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card h-100 shadow-soft border-0">
                <div class="card-body text-center p-4">
                    <i class="fas fa-mobile-alt fa-3x text-success mb-3"></i>
                    <h5 class="card-title fw-bold">Apps</h5>
                    <p class="card-text text-muted">
                        Mobile applications, web platforms, and custom software solutions.
                    </p>
                    <a href="/products/apps" class="btn btn-outline-primary">
                        Browse Apps
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="bg-light py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h3 class="fw-bold mb-4">Ready to Get Started?</h3>
                <p class="lead mb-4">
                    Join thousands of businesses that trust MyShop for their technology needs.
                </p>
                <a href="/register" class="btn btn-primary btn-lg">
                    Start Your Journey
                </a>
            </div>
            <div class="col-lg-6">
                <div class="row text-center">
                    <div class="col-4">
                        <h4 class="text-primary fw-bold">1000+</h4>
                        <small class="text-muted">Happy Customers</small>
                    </div>
                    <div class="col-4">
                        <h4 class="text-primary fw-bold">50+</h4>
                        <small class="text-muted">Products</small>
                    </div>
                    <div class="col-4">
                        <h4 class="text-primary fw-bold">24/7</h4>
                        <small class="text-muted">Support</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .hero-section {
        background: linear-gradient(135deg, var(--primary-color), #45A29E);
        min-height: 500px;
    }
    
    .fa-10x {
        font-size: 10rem;
    }
</style>
