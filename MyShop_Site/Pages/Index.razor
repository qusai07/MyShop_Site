@page "/"

<PageTitle>MyShop - Home</PageTitle>

<div class="hero-section">
    <div class="hero-content">
        <h1 class="display-4">Welcome to MyShop</h1>
        <p class="lead">Your complete e-commerce platform for all your shopping needs</p>
        <div class="hero-buttons">
            <a href="/products" class="btn btn-primary btn-lg me-3">
                <i class="oi oi-cart"></i> Browse Products
            </a>
            <a href="/plans" class="btn btn-outline-light btn-lg">
                <i class="oi oi-info"></i> View Plans
            </a>
        </div>
    </div>
</div>

<div class="container my-5">
    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="feature-card">
                <div class="feature-icon">
                    <i class="oi oi-shield"></i>
                </div>
                <h3>Secure Shopping</h3>
                <p>Shop with confidence using our secure payment system and data protection.</p>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="feature-card">
                <div class="feature-icon">
                    <i class="oi oi-clock"></i>
                </div>
                <h3>Fast Delivery</h3>
                <p>Get your orders delivered quickly with our efficient shipping network.</p>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="feature-card">
                <div class="feature-icon">
                    <i class="oi oi-phone"></i>
                </div>
                <h3>24/7 Support</h3>
                <p>Our customer support team is available around the clock to help you.</p>
            </div>
        </div>
    </div>
</div>